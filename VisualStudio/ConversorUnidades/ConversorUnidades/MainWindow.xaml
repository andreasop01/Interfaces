<Window x:Class="ConversorUnidades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConversorUnidades"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="combo1" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" Width="152" Height="46" SelectionChanged="ComboBox_SelectionChanged"/>
        <ComboBox x:Name="combo2" HorizontalAlignment="Center" Margin="0,287,0,0" VerticalAlignment="Top" Width="152" Height="46"/>
        <TextBox x:Name="txtNumero1" HorizontalAlignment="Center" Margin="0,56,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="115" Height="40"/>
        <TextBox x:Name="txtNumero2" HorizontalAlignment="Center" Margin="0,350,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="115" Height="40"/>
        <Button x:Name="btnConvertir" Content="Convertir" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="152" Click="Button_Click" Margin="0,217,0,0"/>

    </Grid>
</Window>
